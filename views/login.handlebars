<div class="card">
<h2 class="card-header">Login</h2>
<form class="card-body login-form">
  
  <div class="form-group">
    <label class="email-login">Email:</label>
    <input class="form-input" type="text" id="email-login" />
  </div>
  
  <div class="form-group">
    <label class="password-login">Password:</label>
    <input class="form-input" type="password" id="password-login" />
  </div>
  
  <div class="form-group">
    <button class="btn btn-primary" type="submit">Login</button>
    <a href="/signup"><button type="button" id="danger" class="button is-danger">Sign Up</button></a>
  </div>
</form>
</div>

