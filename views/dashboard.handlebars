<div class="column">
  <h2 class="title pb-4">Seller Dashboard</h2>
  <p>Please enter the information about the product you are selling</p>
  <form id="product-form">
    <label for="name">Name: </label>
    <input name="name" type="text">
    <label for="description">Description: </label>
    <textarea name="description" type="text"></textarea>
    <label for="price">Price: </label>
    <input name="price" type="number" step="any">
    <label for="upload">Upload an Image?</label>
    <input name="upload" type="file">
    <button type="submit">Submit</button>
  </form>
</div>

<section>
  <h2>Listings</h2>
  {{#each products as |product| }}
    {{> product-info product}}
  {{/each}}
</section>
<section>
  <h2>Purchases</h2>
  {{#each purchases as |purchase| }}
    {{> product-info purchase.product }}
  {{/each}}
</section>
<script src="/javascript/add-product.js"></script>